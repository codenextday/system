.PHONY:  clean all install

TARGET_MIPI_DPHY=mipi_dphy
TARGET_CAMIF=camif
TARGET_GPIO=gpio
TARGET_AR330=AR330
TARGET_AR230=AR230
TARGET_OV5648=OV5648
TARGET_OV5695=OV5695

all:
	$(MAKE) -C $(TARGET_MIPI_DPHY) $@
	$(MAKE) -C $(TARGET_CAMIF) $@
	$(MAKE) -C $(TARGET_GPIO) $@
	$(MAKE) -C $(TARGET_AR330) $@
	$(MAKE) -C $(TARGET_AR230) $@
	$(MAKE) -C $(TARGET_OV5648) $@
	$(MAKE) -C $(TARGET_OV5695) $@

clean:
	$(MAKE) -C $(TARGET_MIPI_DPHY) $@ clean
	$(MAKE) -C $(TARGET_CAMIF) $@ clean
	$(MAKE) -C $(TARGET_GPIO) $@ clean
	$(MAKE) -C $(TARGET_AR330) $@ clean
	$(MAKE) -C $(TARGET_AR230) $@ clean
	$(MAKE) -C $(TARGET_OV5648) $@ clean
	$(MAKE) -C $(TARGET_OV5695) $@ clean

install:
	$(MAKE) -C $(TARGET_MIPI_DPHY) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_CAMIF) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_GPIO) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_AR330) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_AR230) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_OV5648) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_OV5695) $@ DESTDIR=$(DESTDIR)

install:
	$(MAKE) -C $(TARGET_MIPI_DPHY) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_CAMIF) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_GPIO) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_AR330) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_AR230) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_OV5648) $@ DESTDIR=$(DESTDIR)
	$(MAKE) -C $(TARGET_OV5695) $@ DESTDIR=$(DESTDIR)
